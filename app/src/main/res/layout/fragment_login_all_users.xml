<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UserAccess.LoginAllUsers"
    android:background="@color/white">
    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_40sdp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/logo"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/logo"/>
    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingEnd="@dimen/_10sdp"
        android:text="Login"
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:layout_margin="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textSize="@dimen/_13sdp"
        android:drawablePadding="10dp"
        android:drawableEnd="@drawable/baseline_email_24"
        android:padding="20dp"
        android:inputType="textEmailAddress"
        android:layout_margin="30dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:background="@drawable/edittext_shape"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp"
        android:background="@drawable/edittext_shape"
        app:layout_constraintTop_toBottomOf="@id/Email"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/showPassword"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_visibility_24"
            android:layout_gravity="center">
        </ImageView>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textSize="@dimen/_13sdp"
            android:backgroundTint="@color/white"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/baseline_lock_24"
            android:padding="20dp"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:padding="15dp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/button_shape"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login">
        <TextView
            android:id="@+id/createAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Create new Account?"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"            android:textSize="@dimen/_13sdp"
            ></TextView>
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="create"
            android:textColor="@color/color1"
            android:textSize="18sp"
            ></TextView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>